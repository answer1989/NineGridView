<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image_view_avatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/text_view_moment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/image_view_avatar"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/image_view_avatar"
        android:textColor="@color/colorPrimary"
        android:text="哈哈哈哈哈哈哈哈" />

    <com.answer.ninegridview.lib.NineGridView
        android:id="@+id/nine_grid_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/text_view_moment"
        android:layout_below="@+id/text_view_moment"
        android:layout_marginTop="20dp"></com.answer.ninegridview.lib.NineGridView>


</RelativeLayout>